
<!doctype html>
<html lang="en" ng-app="makeHub">
<head>
    <title>MakeHub</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='//fonts.googleapis.com/css?family=Raleway:400,300,700|Lato:300' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" href="/css/font-awesome.min.css">
    <link rel="stylesheet" href="/css/bootstrap-responsive.min.css">
    <link rel="stylesheet" href="/css/bootswatch.css">
    <link rel="shortcut icon" type="image/x-icon" href="/img/favicon.ico"/>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
<nav class="navbar navbar-default navbar-fixed-top" role="navigation" ng-controller="ChatController">
  <div class="container">
    <!-- Brand and toggle get grouped for better mobile display -->

    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">MakeHub</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav navbar-left">
        <li><a href="#"><%= __("About") %> </a></li>
        <li><a href="/#/search"><%= __("Search projects") %></a></li>
        <% if (user) { %>
        <li><a href="/#/create"><%= __("Create new Project") %></a></li>
        <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" ng-click="my_projects()">My Projects <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li ng-repeat="project in projects">
                    <a href="/#/project/{{project.id}}">{{project.description}}</a>
                </li>
            </ul>
        </li>
        <% } %>
      </ul>
      <span class="navbar-right">
          <% if (!user) { %>

            <span class="hidden-xs-inline hidden-sm-inline"><%= __("Welcome! Please sign in.") %></span>
            <a href="/auth/github" class="btn btn-primary navbar-btn"><%= __("Sign In") %></a>
            <% } else { %>
            <span class="hidden-xs-inline hidden-sm-inline">Hello, <a target="_blank" href="https://github.com/settings/profile">

            <%= user.username %></a> !</span>
            <a href="/logout" class="btn btn-default navbar-btn">Log Out</a>
            <% } %>
      </span>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div ng-controller="ViewController">
  <div ng-view></div>
</div>

<script src="/js/libs/jquery.min.js"></script>
<script src="/js/libs/bootstrap.min.js"></script>
<script src="/js/libs/angular-file-upload-html5-shim.min.js"></script>

<script src="/js/libs/angular.min.js"></script>
<script src="/js/libs/angular-cookies.min.js"></script>
<script src="/js/libs/angular-file-upload.min.js"></script>
<script src="/js/libs/angular-translate.min.js"></script>
<script src="/js/libs/angular-translate-loader-static-files.min.js"></script>
<!-- Minified sanitize didn't work for some reason - bug? -->
<script src="/js/libs/angular-sanitize.js"></script>
<script src="/js/libs/angular-flash.js"></script>
<script src="/js/libs/angular-route.min.js"></script>
<script src="/js/app.js"></script>
<script src="/js/controllers.js"></script>
</body>
</html>
